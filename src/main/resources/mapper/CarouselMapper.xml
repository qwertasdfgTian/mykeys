<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lt.blog.mapper.CarouselMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lt.blog.pojo.Carousel">
        <id column="id" property="id"/>
        <result column="carousel_src" property="src"/>
        <result column="carousel_href" property="href"/>
        <result column="carousel_text" property="text"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        carousel_src,
        carousel_href,
        carousel_text
    </sql>
    <insert id="save" parameterType="com.lt.blog.pojo.Carousel">
        insert into bl_carousel(carousel_src, carousel_href, carousel_text) values (
        #{src}, #{href}, #{text}
        )
    </insert>
    <update id="update" parameterType="com.lt.blog.pojo.Carousel">
        update bl_carousel
        <set>
            <if test="src!=null and src!=''">
                carousel_src = #{src},
            </if>
            <if test="href!=null and href!=''">
                carousel_href = #{href},
            </if>
            <if test="text!=null and text!=''">
                carousel_text = #{text},
            </if>
        </set>
        where id = #{id}
    </update>
    <delete id="deleteById">
        delete from bl_carousel
        where id = #{id}
    </delete>
    <select id="findAll" resultMap="BaseResultMap">
        select *from bl_carousel
    </select>
    <select id="get" parameterType="int" resultMap="BaseResultMap">
        select *from bl_carousel where id=#{id}
    </select>
</mapper>
